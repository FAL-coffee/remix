{
  "name": "@remix-run/fetch-router",
  "version": "0.1.0",
  "description": "A tiny, runtime-agnostic fetch-based router with Koa-style middleware and strong types, powered by @remix-run/route-pattern",
  "author": "Michael Jackson <mjijackson@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remix-run/remix.git",
    "directory": "packages/fetch-router"
  },
  "homepage": "https://github.com/remix-run/remix/tree/v3/packages/fetch-router#readme",
  "files": [
    "LICENSE",
    "README.md",
    "SPEC.md",
    "dist",
    "src",
    "!src/**/*.test.ts"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "./package.json": "./package.json"
    }
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "esbuild": "^0.20.0"
  },
  "dependencies": {
    "@remix-run/route-pattern": "workspace:*"
  },
  "scripts": {
    "build:types": "tsc --project tsconfig.build.json",
    "build:esm": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=neutral --sourcemap",
    "build": "pnpm run clean && pnpm run build:types && pnpm run build:esm",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "node --disable-warning=ExperimentalWarning --test ./src/**/*.test.ts",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "fetch",
    "router",
    "routing",
    "middleware",
    "koa",
    "url",
    "pattern",
    "match"
  ]
}
